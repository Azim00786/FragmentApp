<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment_profile"
    >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="55dp"
       android:background="#1976D3"
       >
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/baseline_arrow_back_24"
           android:layout_marginLeft="20dp"
           android:layout_marginTop="15dp"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Settings"
           android:textColor="@color/white"
           android:textStyle="bold"
           android:textSize="22dp"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="30dp"
           />
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/baseline_search_24"
           android:layout_marginLeft="200dp"
           android:layout_marginTop="15dp"


           />
   </LinearLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/me"
                android:background="@drawable/gol"
                android:clipToOutline="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr.Azim Raza"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:textStyle="italic"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/baseline_favorite_24"
                android:drawableRight="@drawable/baseline_favorite_24"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Be Happy Always Be"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="-170dp"
                android:drawableRight="@drawable/baseline_emoji_emotions_24"
                android:drawableLeft="@drawable/baseline_emoji_emotions_24"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_qr_code_24"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"

                />
        </LinearLayout>
    </ScrollView>




</LinearLayout>